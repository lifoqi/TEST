/* pages/detail/detail.wxss */
.detail .book-details{
  padding: 20rpx 20rpx 40rpx 20rpx;
  border-bottom:8rpx solid #e9e9e9
}
.book-t{
  display: flex;
  justify-content: space-between;
   font-size: 12px;
  color: #444
}
.book-t image{
width: 220rpx;
height: 280rpx;
}
.book-t .title{
  font-size: 14px;
  font-weight: 700;
}
.book-t .main-msg{
margin-left: 40rpx;
display: flex;
flex-direction: column;
justify-content: space-between;
}
.book-b{
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.book-b .btn{
  margin: 0;
  width: 320rpx;
  font-size: 12px;
  background: #e9e9e9;
  border: 1px solid #e9e9e9;
}
.book-desc{
  padding: 30rpx 20rpx;
  border-bottom: 2px solid #e9e9e9;
  font-size: 12px;
  line-height: 1.5;
}
.book-desc .title{
  font-weight: 700;
  font-size: 15px;
}
.bobk-desc .desc-main{
  margin-top: 50rpx;
  font-size: 12px;
  color: #333;
}
.book-catalog{
  border-bottom: 2px solid #e9e9e9;
  padding: 0rpx 20rpx;
  line-height: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.book-catalog .catelog-l{
width: 300rpx;
display: flex;
justify-content: space-between;
}
.book-catalog .catelog-l .show-catalog{
  font-size: 15px;
  font-weight: 700;
  color: #444;
}
.catelogs{
  font-size: 12px;
  color: #444;
}
.updata-time{
  font-size: 10px;
  color: #444;
}
.read-btn-wrap{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  box-shadow:  0 0 2px 2px rgba(0,0,0 .2)
}
.read-btn-wrap .b-btn{
  background: #409eff;
  color: #fff;
  font-size: 12px;
  margin: 0;
}